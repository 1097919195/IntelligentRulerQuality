<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="设备名称："
                android:textColor="@color/c333" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:id="@+id/de_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="电量："
                android:textColor="@color/c333" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:id="@+id/de_battery"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:paddingTop="5dp">

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:id="@+id/qu_type"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_weight="1"
                android:text="类型"
                android:textColor="@color/ff5001" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="订单编号："
                android:textAlignment="textEnd"
                android:textColor="@color/c333" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:id="@+id/qu_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:text="12345678"
                android:textColor="@color/primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/linelayout"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="质检部位"
                android:textAlignment="center"
                android:textColor="@color/primary" />

            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/linelayout"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="质检数据"
                android:textAlignment="center"
                android:textColor="@color/primary" />
            <android.support.v7.widget.AppCompatTextView
                android:textSize="@dimen/font_large"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/linelayout"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="当前测量"
                android:textAlignment="center"
                android:textColor="@color/ff0000" />
        </LinearLayout>

    </LinearLayout>
    <com.aspsine.irecyclerview.IRecyclerView
        android:id="@+id/irc_quality_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:loadMoreEnabled="false"
        app:refreshEnabled="false">

    </com.aspsine.irecyclerview.IRecyclerView>

</LinearLayout>