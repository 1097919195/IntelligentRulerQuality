<?xml version="1.0" encoding="utf-8"?>
<cc.lotuscard.widget.MyLineLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:gxkj="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    gxkj:unMeasure="false"
    >

    <android.support.v7.widget.CardView
        style="@style/quality_data_card_view"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gravity"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="头部"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/primary"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="20mm"
                android:textSize="@dimen/font_large" />

            <TextView
                android:id="@+id/currect"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/font_large" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</cc.lotuscard.widget.MyLineLayout>